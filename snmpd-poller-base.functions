  my $nsrv=shift;
  my $t=gettimeofday();
  my $cmd="/usr/sbin/ntpdate -t $cmd_timeout -q4 $nsrv";
  foreach (`$cmd`) {
    chomp;
    $r=(split )[9] if ( /time server/ );
  }
  my $r = $? >> 8;
  $t=gettimeofday()-$t;
  return $r;
}

